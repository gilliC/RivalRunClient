<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.maya.rivalnewfinal.Competition"
    android:background="@drawable/red2"
    android:id="@+id/n">


    <Button
        android:text="By time"
        android:fontFamily="sans-serif-black"
        android:id="@+id/timeComp"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"


        android:textColor="#D9D9D9"
        android:textSize="30sp"

        android:layout_width="350dp"
        android:layout_height="78dp"
        android:background="@drawable/buttonshape6"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"/>

    <Button
        android:text="By distance"
        android:fontFamily="sans-serif-black"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:background="@drawable/buttonshape5"
        android:layout_width="350dp"
        android:layout_height="78dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:id="@+id/disComp"
        android:layout_below="@+id/timeComp"
        android:layout_alignStart="@+id/timeComp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:id="@+id/textView20"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/imageButton3"
        android:src="@drawable/competition8"
        android:background="#0000ffff"
        android:layout_gravity="center"
        android:layout_alignParentStart="false"
        android:layout_above="@+id/timeComp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:id="@+id/back"
        android:textColor="#ffffff"
        android:backgroundTint="#870404"
        android:background="#870404"
        android:layout_alignTop="@+id/imageButton3"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="17dp" />

</RelativeLayout>
